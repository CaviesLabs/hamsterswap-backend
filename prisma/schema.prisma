generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model AuthChallenge {
  id String @id @default(uuid())

  target String

  memo String

  expiryDate DateTime

  isResolved Boolean

  durationDelta Int
}

model AuthSession {
  id String @id @default(uuid())
  
  actorId String

  authorizedPartyId String

  checksum String

  grantType String

  sessionType String

  expiryDate DateTime

  scopes String[]
}
